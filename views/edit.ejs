<%- include("partials/header") %>
	<div class="ui main text container segment">
		<div class="ui huge header">Edit Blog</div>
		<form class="ui form" action="/blogs/<%=blog[0]._id%>?_method=PUT" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]"  value = "<%= blog[0].title%>" required>	
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" value = "<%=blog[0].image%>" required>
			</div>
			<div class="field">
				<label>Content</label>
				<textarea name="blog[body]" required><%=blog[0].body%></textarea>
			</div>	
			<input type="submit" class="ui blue basic button">
		</form>
	</div>
<%- include("partials/footer") %>